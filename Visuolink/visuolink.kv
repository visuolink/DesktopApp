BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        size_hint_y: None
        height: '40dp'
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: app.current_screen_name
            color: 1,1,1,1
            padding: [25, 0]
            font_size: 20
            halign: 'left'
            valign: 'middle'
            size_hint_x: 0.9
            text_size: self.size

        Button:
            id: menu_button
            text: ":"
            font_size: 30
            size_hint_x: 0.1
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 1,1,1,1

    ScreenManager:
        id: screen_manager

        HomeScreen:
            name: 'home'

        SettingScreen:
            name: 'settings'
        ManageAccountScreen:
            name: 'manage_account'
        ChangePasswordScreen:
            name: 'change_password'

        ProfileScreen:
            name: 'profile'
        LoginScreen:
            name: 'login'

    BoxLayout:
        size_hint_y: None
        height: '60dp'
        spacing: 10
        padding: 10
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: home_button
            text: 'Home'
            background_color: (0.2, 0.2, 0.2, 1)
            on_press: app.change_screen('home')

        Button:
            id: setting_button
            text: 'Settings'
            background_color: (0.4, 0.4, 0.4, 1)
            on_press: app.change_screen('settings')

        Button:
            id: profile_button
            text: 'Profile'
            background_color: (0.4, 0.4, 0.4, 1)
            on_press: app.change_screen('profile')


<HomeScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 1, 1

        BoxLayout:
            padding: (40, 80, 40, 20)
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 20
            padding: 20

            Label:
                text: 'Welcome to VisuoLink'
                font_size: 36
                size_hint_y: None
                height: self.texture_size[1]

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                padding: [40, 10, 40, 5]
                spacing: 20

                Image:
                    source: root.hand_gesture_image
                    size_hint_y: None
                    height: 180
                    fit_mode: 'contain'
                    canvas.before:
                        Color:
                            rgba: 0.028, 0.028, 0.028, 0.92
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

                Image:
                    source: root.volume_gesture_image
                    size_hint_y: None
                    height: 180
                    fit_mode: 'contain'
                    canvas.before:
                        Color:
                            rgba: 0.028, 0.028, 0.028, 0.92
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                padding: [40, 0, 40, 15]
                spacing: 20

                Image:
                    source: root.howtouse_image
                    size_hint_y: None
                    height: 180
                    fit_mode: 'contain'
                    canvas.before:
                        Color:
                            rgba: 0.028, 0.028, 0.028, 0.92
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

                Image:
                    source: root.mobile_version_image
                    size_hint_y: None
                    height: 180
                    fit_mode: 'contain'
                    canvas.before:
                        Color:
                            rgba: 0.028, 0.028, 0.028, 0.92
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

            BoxLayout:
                padding: (40, 0, 40, 10)
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 20

                Button:
                    id: start_btn
                    text: 'Start'
                    size_hint_y: None
                    height: dp(40)
                    background_color: 0.28, 0.4, 0.9, 1
                    color: 1, 1, 1, 1
                    on_press: root.run_scripts(self)


<SettingScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 40
                spacing: 30
                width: self.parent.width
                size_hint_x: 1

                Label:
                    text: 'Models'
                    font_size: 32
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 20
                    spacing: 20
                    canvas.before:
                        Color:
                            rgba: 0.02, 0.02, 0.02, 0.94
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 50
                        spacing: 10

                        Label:
                            text: 'Hand Tracking'
                            font_size: 20
                            valign: 'middle'
                            halign: 'left'
                            text_size: self.size

                        Switch:
                            id: hand_tracking

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 50
                        spacing: 10

                        Label:
                            text: 'Volume Control'
                            font_size: 20
                            valign: 'middle'
                            halign: 'left'
                            text_size: self.size

                        Switch:
                            id: volume_control
                            color: 1, 0, 0, 1

                Label:
                    text: 'Account Settings'
                    font_size: 32
                    size_hint_y: None
                    height: self.texture_size[1]

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 20
                    spacing: 20
                    canvas.before:
                        Color:
                            rgba: 0.02, 0.02, 0.02, 0.94
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15]

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 50
                        spacing: 10

                        Label:
                            text: 'Manage Account'
                            font_size: 20
                            valign: 'middle'
                            halign: 'left'
                            text_size: self.size

                        Button:
                            text: ">"
                            font_size: 35
                            size_hint: None, None
                            size: self.texture_size
                            halign: 'center'
                            background_normal: ''
                            background_color: 0, 0, 0, 0
                            on_press: root.manage_account(self)

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 50
                        spacing: 10

                        Label:
                            text: 'Change Password'
                            font_size: 20
                            valign: 'middle'
                            halign: 'left'
                            text_size: self.size

                        Button:
                            text: ">"
                            font_size: 35
                            size_hint: None, None
                            size: self.texture_size
                            halign: 'center'
                            background_normal: ''
                            background_color: 0, 0, 0, 0
                            on_press: root.change_password(self)

                Button:
                    text: 'Apply Changes'
                    size_hint: (0.8, None)
                    height: dp(40)
                    font_size: '18sp'
                    pos_hint: {"center_x": 0.5}
                    background_color: 0.28, 0.4, 0.9, 1
                    on_press: root.apply_changes(self)

<ProfileScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        padding: 60
        spacing: 20
        pos_hint: {"center_x": 0.5}

        Image:
            source: root.person_image
            size_hint_y: None
            height: self.width * 0.3 if self.width else 80
            fit_mode: 'contain'

        Label:
            id: username_label
            text: 'Username'
            font_size: '18sp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Label:
            id: name_label
            text: 'Full Name'
            font_size: '12sp'
            halign: 'center'
            valign: 'middle'
            color: (0.6, 0.6, 0.6, 1)
            text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.8
            size_hint_y: None
            pos_hint: {"center_x": 0.5}

            canvas.before:
                Color:
                    rgba: 0.02, 0.02, 0.02, 0.94
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]

            Label:
                id: email_label
                text: 'Email: sumit@example.com'
                font_size: '16sp'
                halign: 'left'
                valign: 'middle'
                padding: [25, 0]
                text_size: self.size

            Label:
                id: phone_label
                text: 'Phone No: +91 9876543210'
                font_size: '16sp'
                halign: 'left'
                valign: 'middle'
                padding: [25, 0]
                text_size: self.size

        Button:
            text: 'Logout'
            size_hint: (0.8, None)
            height: dp(40)
            font_size: '18sp'
            pos_hint: {"center_x": 0.5}
            background_color: 0.28, 0.4, 0.9, 1
            on_press: root.logout(self)

        Label:
            text: 'V 1.07'
            font_size: '10sp'
            halign: 'center'
            color: (0.5, 0.5, 0.5, 1)

